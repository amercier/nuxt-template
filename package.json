{
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "eslint": "eslint --ext js,vue --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore '**/*.{html,js,json,md,s?css,vue,ya?ml}'",
    "lint": "if-ci run-p lint:* && if-not-ci run-s --continue-on-error lint:*",
    "lint:eslint": "if-ci run-p 'eslint --color' && if-not-ci run-p 'eslint --fix'",
    "lint:prettier": "if-ci run-s 'prettier --list-different' && if-not-ci run-s 'prettier --write'",
    "test": "if-ci jest --colors --coverage && if-not-ci jest --watch --notify",
    "e2e": "start-server-and-test e2e:start http://localhost:3000 e2e:run",
    "e2e:start": "run-p dev",
    "e2e:run": "if-ci cypress run --config video=false && if-not-ci cypress open"
  },
  "dependencies": {
    "@nuxtjs/pwa": "^2.6.0",
    "consola": "^2.3.2",
    "cross-env": "^5.2.0",
    "koa": "^2.7.0",
    "nuxt": "^2.4.2"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "cypress": "^3.1.5",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-import-resolver-nuxt": "amercier/eslint-import-resolver-nuxt#fix-at-sign-imports",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-cypress": "^2.2.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.1",
    "eslint-plugin-vue": "^5.1.0",
    "husky": "^2.0.0",
    "if-ci": "^3.0.0",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.3",
    "start-server-and-test": "^1.9.2",
    "vue-jest": "^3.0.2"
  },
  "lint-staged": {
    "*.{html,js,json,md,s?css,vue,ya?ml}": [
      "prettier --list-different"
    ],
    "*.{js,vue}": [
      "eslint --ext js,vue",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "jest/globals": true
    },
    "plugins": [
      "vue",
      "jest"
    ],
    "extends": [
      "airbnb-base",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:cypress/recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/vue"
    ],
    "settings": {
      "import/resolver": "nuxt"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }
          ],
          "@nuxt/babel-preset-app"
        ]
      }
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/$1",
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/test/e2e/.*"
    ],
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!coverage/**",
      "!dist/**",
      "!*.config.js"
    ]
  }
}
